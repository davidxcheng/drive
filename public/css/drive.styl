@import url('reset.css')

main
	position relative
	height 100%

#map
	width 100%
	height 600px

.hide
	display none !important

#sidebar
	position absolute
	transition transform .3s
	transform translatex(-260px)
	top 0
	z-index 2
	width 260px
	height 100%
	padding 6px 10px 0 18px
	background-color rgba(0, 0, 0, .8)
	font-family 'Roboto', sans-serif
	color #eee
	font-size 1.4rem

	i
		margin-right 4px

	.close-sidebar
		float right
		font-size 4rem
		color rgba(255, 0, 0, 1)
		margin 0
		cursor pointer

	.close-sidebar:hover
		color rgba(255, 0, 0, 1)

	header
		margin-top 46px
	h1
		font-weight normal
		font-size 2rem
		color cornflowerblue

	h2
		margin-top 12px
		color cornflowerblue
		font-size 1.6rem

#sidebar.show-sidebar
	transform translatex(0)