@import url('reset.css')

$primary = #ccdfb3
$accent-text = cornflowerblue 
$bright-text = #eee
$subtle-dark = #444
$oxygen	= 12px

html, body
	height 100%
	background-color $primary

nav
	background-color $primary

main
	position relative
	height 100%
	font-family 'Roboto', sans-serif
	-webkit-font-smoothing antialiased

#start-page
	height 100%

#map
	width 100%
	height 100%

.hide
	display none !important

#sidebar
	position absolute
	transition transform .3s
	transform translatex(-260px)
	top 0
	z-index 2
	width 260px
	height 100%
	padding 6px 10px 0 18px
	background-color rgba(0, 0, 0, .85)
	color $bright-text
	font-size 1.6rem

	i
		margin-right 4px

	.close-sidebar
		float right
		font-size 4rem
		color rgba(255, 0, 0, .8)
		margin 0
		cursor pointer

	.close-sidebar:hover
		color rgba(255, 0, 0, 1)

	header
		margin-top 46px
	h1
		font-weight normal
		font-size 2rem
		color $accent-text

	h2
		margin-top 12px
		color $accent-text
		font-size 1.6rem

	#contact
		margin-top 12px
		border-top 1px solid $subtle-dark

		.cta
			display inline-block
			text-align center
			width 50%
			margin 4px 0 12px
			padding-top 10 px
			border-left 1px solid $subtle-dark
			cursor pointer
			color $accent-text

			i
				font-size 2.8rem
				color $accent-text

			i.fa-calendar
				margin -3px 0 3px 0

		.cta:first-child
			border-left none

		.cta:hover
			text-decoration none

		#lblPhone
			text-align center
			font-size 2.4rem

#sidebar.show-sidebar
	transform translatex(0)

#mapSearch
	border 1px solid transparent
	border-radius 3px 0 0 3px
	outline none
	box-shadow 0 2px 6px rgba(0, 0, 0, .3)
	font-size 1.5rem
	text-overflow ellipsis
	width 400px
	height 32px
	padding 0 11px 0 13px
	margin-top 16px

@media screen and (min-width: 900px)
	#start-page
		max-width 800px
		margin 0 auto

		img
			float left
		section
			float left