@import url('reset.css')

main
	position relative
	height 100%

#map
	width 100%
	height 600px

.hide
	display none !important

#sidebar
	position absolute
	left -260px
	top 0
	z-index 2
	width 260px
	height 100%
	padding 6px 10px 0 10px
	background-color rgba(0, 0, 0, .7)
	font-family 'Roboto', sans-serif
	color white

	i
		float right
		font-size 4rem
		color rgba(255, 0, 0, .6)
		margin 0
		cursor pointer

	i:hover
		color rgba(255, 0, 0, 1)

	header
		margin-top 20px
	h1
		font-weight normal
		font-size 2.6rem

	h2
		font-size 2rem

.show-sidebar
	-webkit-animation .3s slide-in linear
	-webkit-animation-fill-mode forwards

.hide-sidebar
	-webkit-animation .3s slide-out linear

@keyframes slide-in
	to
		transform translatex(260px)

@keyframes slide-out
	to
		transform translatex(0)